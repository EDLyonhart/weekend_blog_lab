<h1><%= @post.title %></h1>

<% if @post.errors.any?%>
  <% @post.errors.full_messages.each do |error|%>
    <p class="text-danger">
      <%= error %>
    </p>
  <% end%>
<% end %>

<%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
  <br><br>
    <%= f.label :catagory %>
    <%= f.text_field :catagory %>
  <br><br>
    <%= f.label :body %>
    <%= f.text_area :body%>
  <br><br>
    <%= f.submit "Save" %>
<% end %>