<h1>New Post by <%= @author.first_name %> <%= @author.last_name %></h1>

<% if @post.errors.any?%>
  <% @post.errors.full_messages.each do |error|%>
    <p class="text-danger">
      <%= error %>
    </p>
  <% end%>
<% end %>

<%= form_for [@author, @post] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
<br><br>
  <%= f.label :catagory %>
  <%= f.text_field :catagory %>
<br><br>
  <%= f.label :body %>
  <%= f.text_field :body %>
<br><br>
  <%= f.submit %>

<% end %>