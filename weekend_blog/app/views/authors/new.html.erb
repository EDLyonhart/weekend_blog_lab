<h1>Create a New Author</h1>

<% if @author.errors.any?%>
  <% @author.errors.full_messages.each do |error|%>
    <p class="text-danger">
      <%= error %>
    </p>
  <% end%>
<% end %>

<%= form_for @author do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
<br><br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
<br><br>
  <%= f.label :age %>
  <%= f.text_field :age %>
<br><br>
  <%= f.submit %>

<% end %>